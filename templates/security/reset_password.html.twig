{% extends 'security/layout.html.twig' %}

{% block main %}
    {{ include('security/_company_icon.html.twig') }}

    <h2 class="mt-4 text-2xl/9 font-bold tracking-tight">{{ 'reset_password.title'|trans }}</h2>

    {{ form_start(form, {attr: {class: 'space-y-6 mt-4'}}) }}
    <div>
        <div class="mt-2">
            <label class="floating-label">
                <span>{{ 'label.password'|trans }}</span>
                {{ form_widget(form.password, {attr: {class: 'input w-full'}}) }}
                {{ form_errors(form.password) }}
            </label>
        </div>
    </div>

    <div class="mb-4">
        <button type="submit" class="btn btn-primary w-full">
            {{ 'reset_password.button'|trans }}
        </button>
    </div>
    {{ form_end(form) }}
{% endblock %}
