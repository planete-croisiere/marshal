{% extends 'installation/layout.html.twig' %}

{% trans_default_domain 'installation' %}

{% block content %}
    <div class="grid grid-flow-row-dense grid-cols-3 grid-rows-1 py-12 px-8">
        <div class="">
            <ul class="steps steps-vertical">
                <li class="step step-primary">{{ 'stepper.item.1'|trans }}</li>
                <li class="step">{{ 'stepper.item.2'|trans }}</li>
                <li class="step">{{ 'stepper.item.3'|trans }}</li>
            </ul>
        </div>
        <div class="col-span-2">
            <div class="card shadow-lg">
                <div class="card-body">
                    <h2 class="card-title">{{ 'step1.title'|trans }}</h2>

                    <p class="my-5">{{ 'step1.default'|trans|raw }}</p>

                    <p>{{ 'step1.instruction'|trans|raw }}</p>
                    <div class="tabs tabs-border">
                        <input type="radio" name="my_tabs_2" class="tab" aria-label="{{ 'step1.tab1'|trans }}" checked="checked" />
                        <code class="tab-content border-base-300 p-8 w-full whitespace-nowrap overflow-x-auto bg-base-200 rounded-md">
                            APP_SECRET=HereYourSecretToPersonnalize<br>
                            DATABASE_URL="sqlite:///%kernel.project_dir%/var/data.db"<br>
                            MAILER_DSN=smtp://user:pass@smtp.example.com:25
                        </code>

                        <input type="radio" name="my_tabs_2" class="tab" aria-label="{{ 'step1.tab2'|trans }}" />
                        <code class="tab-content border-base-300 p-8 w-full whitespace-nowrap overflow-x-auto bg-base-200 rounded-md">
                            APP_SECRET=HereYourSecretToPersonnalize<br>
                            DATABASE_URL="postgresql://app:!ChangeMe!@127.0.0.1:5432/app?serverVersion=16&charset=utf8"<br>
                            MAILER_DSN=smtp://user:pass@smtp.example.com:25
                        </code>

                        <input type="radio" name="my_tabs_2" class="tab" aria-label="{{ 'step1.tab3'|trans }}" />
                        <code class="tab-content border-base-300 p-8 w-full whitespace-nowrap overflow-x-auto bg-base-200 rounded-md">
                            APP_SECRET=HereYourSecretToPersonnalize<br>
                            DATABASE_URL="mysql://app:!ChangeMe!@127.0.0.1:3306/app?serverVersion=8.0.32&charset=utf8mb4"<br>
                            MAILER_DSN=smtp://user:pass@smtp.example.com:25
                        </code>
                    </div>

                    <p>{{ 'step1.help'|trans|raw }}</p>
                    <p class="mt-4">{{ 'step1.more_infos'|trans }}</p>
                    <ul class="list-disc ms-4">
                        <li>
                            <a href="https://symfony.com/doc/current/configuration.html#configuring-environment-variables-in-production" target="_blank">
                                https://symfony.com/doc/current/configuration.html#configuring-environment-variables-in-production
                            </a>
                        </li>
                        <li>
                            <a href="https://symfony.com/doc/current/doctrine.html#configuring-the-database" target="_blank">
                                https://symfony.com/doc/current/doctrine.html#configuring-the-database
                            </a>
                        </li>
                        <li>
                            <a href="https://symfony.com/doc/current/mailer.html#transport-setup" target="_blank">
                                https://symfony.com/doc/current/mailer.html#transport-setup
                            </a>
                        </li>
                    </ul>

                    <a class="mt-4 btn place-self-end" href="{{ path('installation_step', {step: 2}) }}">
                        {{ 'step1.button.next'|trans }}
                        <svg width="16px" height="16px" class="me-2 inline-block"
                            data-slot="icon" fill="none" stroke-width="1.5" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M3 8.689c0-.864.933-1.406 1.683-.977l7.108 4.061a1.125 1.125 0 0 1 0 1.954l-7.108 4.061A1.125 1.125 0 0 1 3 16.811V8.69ZM12.75 8.689c0-.864.933-1.406 1.683-.977l7.108 4.061a1.125 1.125 0 0 1 0 1.954l-7.108 4.061a1.125 1.125 0 0 1-1.683-.977V8.69Z"></path>
                        </svg>
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
